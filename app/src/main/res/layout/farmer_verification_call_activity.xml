<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animationCache="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/farmerVerifyListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightY"
            android:padding="8dp">


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textRegNoTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पंजीकरण संख्या: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textRegNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/textRegNoTtl"
                android:layout_toRightOf="@+id/textRegNoTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorRed"
                android:textStyle="bold" />


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textApplicationIdTtl"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRegNo"
                android:text="आधार संख्या : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textAadharNo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRegNo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/textApplicationIdTtl"
                android:layout_toRightOf="@+id/textApplicationIdTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textAadharNo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlueDark"
                android:textStyle="bold" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFFatherNameTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="पिता/पति का नाम:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFFatherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/textFFatherNameTtl"
                android:layout_toRightOf="@+id/textFFatherNameTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textAffectedLandTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="जन्म तिथि: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textDob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_toStartOf="@+id/textSubsidyAmtTtl"
                android:layout_toLeftOf="@+id/textSubsidyAmtTtl"
                android:layout_toEndOf="@+id/textAffectedLandTtl"
                android:layout_toRightOf="@+id/textAffectedLandTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textGenderTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_toStartOf="@+id/textGender"

                android:layout_toLeftOf="@+id/textGender"
                android:text="लिंग: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textVillTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGenderTtl"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="गावं : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textVill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGenderTtl"
                android:layout_toStartOf="@+id/textCatogeryTtl"
                android:layout_toLeftOf="@+id/textCatogeryTtl"
                android:layout_toEndOf="@+id/textVillTtl"
                android:layout_toRightOf="@+id/textVillTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textCatogeryTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGenderTtl"
                android:layout_toStartOf="@+id/textCatogery"

                android:layout_toLeftOf="@+id/textCatogery"
                android:text="कोटि: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textCatogery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGenderTtl"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textMobileTtl"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textVillTtl"
                android:text="M. : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFMobNo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textVillTtl"

                android:layout_toEndOf="@+id/textMobileTtl"
                android:layout_toRightOf="@+id/textMobileTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFarmerGradeTtl"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textVillTtl"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/textFMobNo"
                android:layout_toRightOf="@+id/textFMobNo"
                android:text="कृ. श्रेणी: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFarmerGrade"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textVillTtl"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/textFarmerGradeTtl"
                android:layout_toRightOf="@+id/textFarmerGradeTtl"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
        android:id="@+id/textMobilecall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="किसान को कॉल करने के लिए यहाँ क्लिक करें->>"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorBlueDark"
        app:layout_constraintEnd_toStartOf="@+id/callButton"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <ImageButton
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:srcCompat="@drawable/telephone_call" />


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callButton"></FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
