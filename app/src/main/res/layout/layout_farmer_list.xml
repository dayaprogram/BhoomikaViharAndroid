<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:animationCache="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:id="@+id/farmerListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBB"
            android:padding="8dp">


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textRegNoTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration No.: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textRegNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textRegNoTtl"
                android:layout_toRightOf="@+id/textRegNoTtl"
                android:text=" 2371525356497"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textApplicationIdTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRegNo"
                android:text="Application No.: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textApplicationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRegNo"
                android:layout_toEndOf="@+id/textApplicationIdTtl"
                android:layout_toRightOf="@+id/textApplicationIdTtl"
                android:gravity=""
                android:text="26979697999799F19"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textApplicationId"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Rakesh Kumar Ranjan"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />


            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFFatherNameTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="F/H Name : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFMobNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherNameTtl"
                android:text="Mo. 9934009966 "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textFFatherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFName"
                android:layout_toEndOf="@+id/textFFatherNameTtl"
                android:layout_toRightOf="@+id/textFFatherNameTtl"
                android:text="Sajiv Prasad"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textAffectedLandTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFMobNo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Aff. Land : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textAffectedLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFMobNo"
                android:layout_toEndOf="@+id/textAffectedLandTtl"
                android:layout_toRightOf="@+id/textAffectedLandTtl"
                android:text="6000 D"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textSubsidyAmtTtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_toStartOf="@+id/textSubsidyAmt"

                android:layout_toLeftOf="@+id/textSubsidyAmt"
                android:text="Sub. Amt.: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <com.bhoomikabihar.surveyapp.CustomView.HindiTextView
                android:id="@+id/textSubsidyAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFFatherName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="2500.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorRed" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>